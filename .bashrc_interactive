#!/bin/bash
# sourced only when the shell is interactive

export PATH=/opt/local/bin:/opt/local/sbin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin

# git completion
source /usr/local/etc/bash_completion.d/git-completion.bash
source /usr/local/etc/bash_completion.d/git-prompt.sh
# bazel completion
source /usr/local/Cellar/bazel/0.3.1/etc/bash_completion.d/bazel-complete.bash

# bash prompt
PS1="\u@\h:\w \$(__git_ps1 '(%s)')\$ "

# for python virtual environment
if [ -r /usr/bin/virtualenvwrapper.sh ]; then
    source /usr/bin/virtualenvwrapper.sh
fi
if [ -r /usr/local/bin/virtualenvwrapper.sh ]; then
    source /usr/local/bin/virtualenvwrapper.sh
fi
export WORKON_HOME=$HOME/.virtualenvs

# common aliases
alias home='cd $HOME'
alias dev='cd $HOME/dev'
alias g='egrep -i'
alias G='egrep'
alias ls='ls -G'
alias l='ls -lG'
alias ll='ls -laG'
alias pg='ps aux | g'
if shell_is_linux ; then
    alias ls='ls --colo=auto'
    alias l='ls -l --color=auto'
    alias ll='ls -la --color=auto'
fi

# fzf
FZF_DEFAULT_COMMAND='ag --hidden --ignore .git -g ""'
[ -f ~/.fzf.bash ] && source ~/.fzf.bash
